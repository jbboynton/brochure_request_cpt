#!/bin/bash

helpful_reminder() {
  local reminder_id; reminder_id=$(( RANDOM % 6 + 1 ))
  local reminder; reminder=""

  case $reminder_id in
    1)
      reminder="Don't make changes in production."
      ;;
    2)
      reminder="Bad things happen when you make changes in production."
      ;;
    3)
      reminder="https://pasteboard.co/H1okBs1.jpg"
      ;;
    4)
      reminder="Next time you have an urge to make a change in production,"
      reminder="$reminder ask yourself, what would Uncle Bob Martin do?"
      ;;
    5)
      reminder="Making changes in production is a generally bad idea."
      ;;
    6)
      reminder="Production is not a place for making untested changes."
      ;;
    *)
      reminder="If something in your local environment breaks, Jeshua doesn't"
      reminder="$reminder come upstairs and ask why."
      ;;
  esac

  echo "$reminder"
}

echo "+--"
echo ":"
echo ":   Fortune Cookie"
echo ":   --------------"
echo ":"
echo ":   $(helpful_reminder)"
echo ":"
echo "--+"
echo
